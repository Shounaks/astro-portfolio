			content: refactor_data!.innerHTML,
			allowHTML: true,
			arrow: true,
		});
	const _stand = () =>
		tippy("#stand", {
			content: track_data!.innerHTML,
			allowHTML: true,
			arrow: true,
		});
	function initializeTippy() {
		if (document.getElementById("ability-tooltips")) {
			_fod();
			_cogs();
			_track();
			_jingu();
			_refactor();
			_stand();
		}
	}
	document.addEventListener("astro:after-swap", initializeTippy);
	initializeTippy();
</script>
