		},
		{
			name: "Ayush Kumar",
			occupation: "SAP Consultant",
			text: "I and Shounak worked together during our training when we started our careers. Shounak was one of the most valuable member in the group we had back then with unmatched skills is Java and SQL. Although post training we were assigned to different projects and technologies, but his domain skills can only be matched by how good a friend he is outside work.",
		},
	];
}
function before() {
	var id = document.querySelector("div[data-recommendation-id]");
	var text = document.getElementById("recommendation-text");
	var name = document.getElementById("recommendation-name");
	var occupation = document.getElementById("recommendation-occupation");

	var currentId = parseInt(id.getAttribute("data-recommendation-id").toString());
	var nextId = (currentId + recommendationData().length - 1) % recommendationData().length;
	var newData = recommendationData()[nextId];
	text.innerText = minimizeRecommendation(newData.text);
	name.innerText = newData.name;
	occupation.innerText = newData.occupation;
	id.setAttribute("data-recommendation-id", nextId.toString());
}


function after() {
	var id = document.querySelector("div[data-recommendation-id]");
	var text = document.getElementById("recommendation-text");
	var name = document.getElementById("recommendation-name");
	var occupation = document.getElementById("recommendation-occupation");

	if(!id || !text || !name || !occupation){return;}
	var currentId = parseInt(id.getAttribute("data-recommendation-id").toString());
	var nextId = (currentId + 1)%recommendationData().length;
	var newData = recommendationData()[nextId];
	text.innerText = minimizeRecommendation(newData.text);
	name.innerText = newData.name;
	occupation.innerText = newData.occupation;
	id.setAttribute("data-recommendation-id",nextId.toString());
}

function minimizeRecommendation(item) {
	const wordLimit = 35;
	const addEllipse = item.split(" ").length > wordLimit ? "..." : "";
	return item.split(" ").slice(0, wordLimit).reduce((a, b) => a + " " + b, "") + " " + addEllipse;
}

//Initialize Data after first page load
after();
//Initialize Data after astro swaps between page
document.addEventListener("astro:after-swap", after);
</script>
