import manulife from "./project/manulife.png";
import manulifeicon from "./project/finance.png";
import manulifebg from "./project/financebg.webp";

import khamangimage from "./project/khamangicon.png";
import khamangfood from "./project/food.png";
import khamangfoodbg from "./project/foodbg.jpg";

import arcadia from "./project/arcadia.png";
import arcadiaelement from "./project/element.webp";
import arcadiabg from "./project/arcadiabg.jpg";

import suvidha from "./project/suvidha.png";
