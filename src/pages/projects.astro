<script defer is:inline>
	function updateData() {
		let item = Array.from(document.getElementsByClassName("item"));

		item.forEach((element) => {
			element.addEventListener("mouseenter", (e) => {
				let currentItem = e.target.id;
				let data = document.getElementById(currentItem + "_data");
				Array.from(document.getElementById("description").children).forEach(
					(item) => {
						item.classList.add("hidden");
					}
				);
				data?.classList?.remove("hidden");

				this.nextElementSibling?.classList.add("sibling");
				this.previousElementSibling?.classList.add("sibling");
			});
		});
		item.forEach((element) => {
			element.addEventListener("mouseleave", (e) => {
				this.nextElementSibling?.classList.remove("sibling");
				this.previousElementSibling?.classList.remove("sibling");
			});
		});
	}

	updateData();
	document.addEventListener("astro:after-swap", updateData);
</script>
