---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import MainLayout from "../layouts/MainLayout.astro";

const firstYearSyllabus: Array<String> = [
	"Computer Fundamentals 1 ",
	"Computer Fundamentals 2 (C Programming)",
];

const secondYearSyllabus: Array<String> = [
	"DataStructures",
	"Computer Networking",
	"Digital Electronics",
	"Linux Operating System",
	"Discreet Maths",
	"Object Oriented Programming (C++)",
	"Microprocessors & Computer Organization",
];

const thirdYearSyllabus: Array<String> = [
	"Operating Systems",
	"Theory of Computation",
	"DBMS",
	"Java",
	"Advance Java",
	"Software Engineering",
	"Design and Analysis of Algorithms",
	"Network Security",
];

const fourthYearSyllabus: Array<String> = [
	"Data Warehousing and data Mining",
	"Principles of Compiler Design",
	"Cloud Computing",
	"Internet of Things",
	"Cyber Security",
];
---
<head>
	<BaseHead title={"Experience | "+ SITE_TITLE} description={SITE_DESCRIPTION} />
</head>
<MainLayout>
	<div class="min-w-full min-h-full">
		<div class="pb-2">
			<h2 class="font-sans font-bold text-3xl md:text-6xl gap-10 text-white">
				Experience Section
			</h2>
			<p
				class="font-bold sm:text-xs text-md uppercase bg-gradient-to-b from-teal-300 to-teal-500 inline-block text-transparent bg-clip-text whitespace-nowrap w-full"
			>
				My Journey through computer science landscape
			</p>
			<hr class="border-purple-500 pb-2" />
			<!-- <div
				class="text-white bg-gradient-to-r from-blue-500 px-2 rounded min-w-full h-[30px]"
			>
				Career Portfolio
			</div> -->
		</div>
		<div class="flex flex-col flex-grow max-h-full min-w-full gap-3">
			<details class="text-white bg-gradient-to-r from-slate-800 hover:bg-slate-600 rounded-2xl p-2 bg-opacity-75">
				<summary class="list-none flex flex-row sm:gap-2 sm:mb-2">
					<img
						src="/Deakin.png"
						class="w-24 h-36 rounded bg-white p-2 object-contain"
						alt=""
					/>
					<div class="">
						<div class="grid grid-cols-2 items-center">
							<p class="capitalize font-extrabold text-2xl">
								Masters in Cyber Security
							</p>
							<p class="capitalize text-xl"></p>
						</div>
						<div
							class="text-zinc-400 uppercase text-xl tracking-widest font-extralight col-span-1 hover:text-white"
						>
							Deakin University
						</div>
						<div
							class="text-zinc-400 uppercase text-md tracking-widest font-extralight col-span-1 hover:text-white"
						>
							2024 - <span class="text-emerald-400">Present</span> / GIFT City, Gujrat, IN
						</div>
						<div class="grid grid-cols-4 grid-flow-col gap-x-8 group">
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								Marks
							</p>
							<p
								class="text-yellow-400 group-hover:text-yellow-300 uppercase text-sm tracking-widest font-extralight col-span-3"
							>
								(work in progress)
							</p>
						</div>
						<div class="grid grid-cols-4 grid-flow-col gap-x-8 group">
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								Electives
							</p>
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-3"
							>
								Computer Networking & Security, Secure Coding, Professional Practice in IT, Foundation in Data Analytics
							</p>
						</div>
					</div>
				</summary>
				<p>
					<hr class="border-green-400" />
					<p
						class="p-2 text-zinc-400 capitalize text-md font-extralight hover:text-white"
					>
						Currently persuing the coursework, will brb when i have something to share!
					</p>
				</p>
			</details>
			<!-- COGNIZANT -->
			<details
				class="text-white bg-gradient-to-r from-slate-800 hover:bg-slate-600 rounded-2xl p-2 bg-opacity-75"
			>
				<summary class="list-none flex flex-row sm:gap-2 sm:mb-2">
					<img
						src="/experience/cognizant.svg"
						class="w-24 h-36 rounded bg-white"
						alt=""
					/>
					<div class="">
						<div class="grid grid-cols-2 items-center">
							<p class="capitalize font-extrabold text-2xl">
								Programmer Analyst
							</p>
							<p class="capitalize text-xl"></p>
						</div>
						<div
							class="text-zinc-400 uppercase text-xl tracking-widest font-extralight col-span-1 hover:text-white"
						>
							Cognizant
						</div>
						<div
							class="text-zinc-400 uppercase text-md tracking-widest font-extralight col-span-1 hover:text-white"
						>
							2022 - 2024 / Bengaluru,
							Karnataka, IN
						</div>
						<div class="grid grid-cols-4 gap-8 group">
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								Duration of Employment
							</p>
							<div
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-2"
							>
								2 Yrs
							</div>
						</div>
						<div class="grid grid-cols-4 grid-flow-col gap-x-8 group">
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								Specialization
							</p>
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-3"
							>
								Microservice Developer
							</p>
						</div>
						<div class="grid grid-cols-4 grid-flow-col gap-x-8 group">
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								Skills Acquired
							</p>
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-3"
							>
								Java, Spring, Spring Boot,SpringREST + Reactive), Angular 14,
								Hibernate
							</p>
						</div>
					</div>
				</summary>
				<p>
					<hr class="border-orange-400" />
					<ul class="p-2 pl-10 text-md list-disc">
						<li class="pb-2 text-justify">
							Implementation of multiple Microservices from scratch to cater to
							<span class="text-purple-300 hover:underline underline-offset-4">
								millions of requests</span
							> using and configuration of <span
								class="text-emerald-400 hover:underline hover:decoration-wavy underline-offset-4"
								>Auto scaling Databases (SQL & No-SQL)</span
							>
							 to achieve high-performant application.
						</li>
						<li class="pb-2 text-justify">
							Implementation of triggers, <span
								class="text-purple-300 hover:underline underline-offset-4"
								>metrics and observability</span
							> using <span
								class="text-emerald-400 hover:underline hover:decoration-wavy underline-offset-4"
								>Devo Log</span
							> aggregation.
						</li>
						<li class="pb-2 text-justify">
							Working with Insurance data of <span
								class="text-purple-300 hover:underline underline-offset-4"
								>millions of users</span
							> and building a platform for Agents to Access their data.
						</li>
						<li class="pb-2 text-justify">
							Creating a <span
								class="text-purple-300 hover:underline underline-offset-4"
								>QR based generation & retrieval</span
							> service for tax invoices making it available on the go.
						</li>
						<li class="pb-2 text-justify">
							Generated an <span
								class="text-purple-300 hover:underline underline-offset-4"
								>XML based signature service</span
							> to the said tax invoice form to interact with government tax
							portal. Building a real-time currency Exchange Rate (MS) and
							Policy Data API feature to propagate asynchronous and distributed
							data under a single Unified API
						</li>
						<li class="pb-2 text-justify">
							Implimentation of microservice <span
								class="text-purple-300 hover:underline underline-offset-4"
								>serving real-time Product Rate (MS) data</span
							> to the customers.
						</li>
					</ul>
				</p>
			</details>
			<!-- INFOSYS -->
			<details
				class="text-white bg-gradient-to-r from-slate-800 hover:bg-slate-600 rounded-2xl p-2 bg-opacity-75"
			>
				<summary class="list-none flex flex-row sm:gap-2 sm:mb-2">
					<img
						src="/experience/infosys.webp"
						class="w-24 h-36 rounded bg-white object-contain"
						alt=""
					/>
					<div class="">
						<div class="grid grid-cols-2 items-center">
							<p class="capitalize font-extrabold text-2xl">
								Senior System Engineer
							</p>
							<p class="capitalize text-xl"></p>
						</div>
						<div
							class="text-zinc-400 uppercase text-xl tracking-widest font-extralight col-span-1 hover:text-white"
						>
							Infosys ltd.
						</div>
						<div
							class="text-zinc-400 uppercase text-md tracking-widest font-extralight col-span-1 hover:text-white"
						>
							2020-2022 / Bengaluru, Karnataka, IN
						</div>
						<div class="grid grid-cols-4 gap-8 group">
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								Duration of Employment
							</p>
							<div
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-2"
							>
								2 Yrs
							</div>
						</div>
						<div class="grid grid-cols-4 grid-flow-col gap-x-8 group">
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								Specialization
							</p>
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-3"
							>
								FullStack Engineer ( Java + Angular )
							</p>
						</div>
						<div class="grid grid-cols-4 grid-flow-col gap-x-8 group">
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								Skills Acquired
							</p>
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-3"
							>
								Java, Spring, Spring Boot,SpringREST + Reactive), Angular 14,
								Hibernate
							</p>
						</div>
					</div>
				</summary>
				<p>
					<hr class="border-red-400" />
					<ul class="p-2 pl-10 text-md list-disc">
						<li class="pb-2 text-justify">
							Successfully created <span
								class="text-purple-300 hover:underline underline-offset-4"
								>Shadow Service</span
							> for a reservation system that will replace client-facing system
							in upcoming years
						</li>
						<li class="pb-2 text-justify">
							Designed and Developed several micro-frameworks and critical
							application functionalities:
							{
								[
									"Keyword Based blocking ",
									"Hook-based functionality to interact with external API ",
									"Element-based Data Flow ",
									"Introducing customized validation on API level ",
								].map((item) => (
									<div class="text-purple-300 hover:underline underline-offset-4">
										{item}
									</div>
								))
							}
						</li>
						<li class="pb-2 text-justify">
							Spearheaded the usage of <span
								class="text-purple-300 capitalize hover:underline underline-offset-4"
								>Clean Coding and Review</span
							> in the team and ensured team codebase exceeds the present
							standard.
						</li>
						<li class="pb-2 text-justify">
							Improved code quality vastly by using <span
								class="text-purple-300 hover:underline underline-offset-4"
								>Standardized Coding Practices and Design Patterns</span
							>
						</li>
						<li class="pb-2 text-justify">
							Improved the quality of <span
								class="text-purple-300 capitalize hover:underline underline-offset-4"
								>Automation Test</span
							> by over 35-40% for selected elements and configured multiple
							Microservices to ensure successful deployment on existing <span
								class="text-emerald-400 hover:underline hover:decoration-wavy underline-offset-4"
								>Armada Cluster</span
							>
						</li>
						<li class="pb-2 text-justify">
							Patched multiple vulnerabilities reported in deployment as part of


							<span
								class="text-purple-300 capitalize hover:underline underline-offset-4"
								>securing application</span
							> from external threat actors
						</li>
					</ul>
				</p>
			</details>
			<!-- END  -->
			<!-- <div
				class="text-white bg-gradient-to-l from-[#b145e9] px-2 rounded min-w-full h-[30px] text-right"
			>
				Education Portfolio
			</div> -->
			<details class="text-white bg-gradient-to-r from-slate-800 hover:bg-slate-600 rounded-2xl p-2 bg-opacity-75">
				<summary class="list-none flex flex-row sm:gap-2 sm:mb-2">
					<img
						src="/experience/DIEMS.webp"
						class="w-24 h-36 rounded bg-white p-2 object-contain"
						alt=""
					/>
					<div class="">
						<div class="grid grid-cols-2 items-center">
							<p class="capitalize font-extrabold text-2xl">
								Bachelors in Engineering (Computer Science and Engineering)
							</p>
							<p class="capitalize text-xl"></p>
						</div>
						<div
							class="text-zinc-400 uppercase text-xl tracking-widest font-extralight col-span-1 hover:text-white"
						>
							Deogiri Institute of Engineering & Management Studies
						</div>
						<div
							class="text-zinc-400 uppercase text-md tracking-widest font-extralight col-span-1 hover:text-white"
						>
							2016 - 2020 / Sambhajinagar, Maharashtra, IN
						</div>
						<div class="grid grid-cols-4 grid-flow-col gap-x-8 group">
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								Marks
							</p>
							<p
								class="text-yellow-400 group-hover:text-yellow-300 uppercase text-sm tracking-widest font-extralight col-span-3"
							>
								7.2 CGPA (First Class with Distinction)
							</p>
						</div>
						<div class="grid grid-cols-4 grid-flow-col gap-x-8 group">
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								Electives
							</p>
							<p
								class="text-zinc-400 group-hover:text-white uppercase text-sm tracking-widest font-extralight col-span-3"
							>
								Computer Networking, Cyber Security, Internet of Things
							</p>
						</div>
					</div>
				</summary>
				<p>
					<hr class="border-green-400" />
					<p
						class="p-2 text-zinc-400 capitalize text-md font-extralight hover:text-white"
					>
						Relevant Course Work
					</p>
					<ul class="p-2 pl-10 capitalize text-md list-disc">
						<li class="pb-2 text-justify">
							First Year :
							<span
								class="text-zinc-400 uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								{
									firstYearSyllabus.map((course) => (
										<span class="hover:text-white">{course}, </span>
									))
								}
							</span>
						</li>
						<li class="pb-2 text-justify">
							Second Year : <span
								class="text-zinc-400 uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								{
									secondYearSyllabus.map((course) => (
										<span class="hover:text-white">{course}, </span>
									))
								}
							</span>
						</li>
						<li class="pb-2 text-justify">
							Third Year : <span
								class="text-zinc-400 uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								{
									thirdYearSyllabus.map((course) => (
										<span class="hover:text-white">{course}, </span>
									))
								}
							</span>
						</li>
						<li class="pb-2 text-justify">
							Fourth Year : <span
								class="text-zinc-400 uppercase text-sm tracking-widest font-extralight col-span-1"
							>
								{
									fourthYearSyllabus.map((course) => (
										<span class="hover:text-white">{course}, </span>
									))
								}
							</span>
						</li>
					</ul>
				</p>
			</details>
		</div>
	</div>
</MainLayout>
