---
let { link, title,imageUrl } = Astro.props;
const href = `#${link}`;
---

<a id=`${link}` {href}>
	<div class="w-full min-w-full text-[#cf8e6d] group flex align-middle items-center">
		{imageUrl != null? <img class="mr-2" src={imageUrl}></img>: ""}
		<div
			class="italic text-2xl font-thin transition-all duration-500 ease-in-out align-middle h-full"
		>
			{title}
		</div>
	</div>
</a>
